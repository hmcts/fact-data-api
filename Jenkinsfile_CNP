#!groovy
@Library("Infrastructure")

import uk.gov.hmcts.contino.GradleBuilder

def type = "java"
def product = "fact"
def component = "data-api"

GradleBuilder builder = new GradleBuilder(this, product)

withPipeline(type, product, component) {
  enableDbMigration('fact-kv')

  afterSuccess('test') {
    builder.gradle('integration')
  }

  afterAlways('functionalTest:preview') {
    // Retrieve the Allure history from the last build if available
    copyArtifacts(
      projectName: env.JOB_NAME,
      selector: lastSuccessful(),
      filter: 'build/reports/allure-report/allureReport/history/**',
      optional: true
    )
    sh '''
      mkdir -p build/allure-results/history
      cp -r build/reports/allure-report/allureReport/history/* build/allure-results/history/ || true
    '''

    // Generate the Allure report
    builder.gradle('allureReport')

    // Archive the history for next build
    archiveArtifacts artifacts: 'build/reports/allure-report/allureReport/history/**'

    // Publish the Allure report
    publishHTML target: [
      allowMissing: true,
      alwaysLinkToLastBuild: true,
      keepAll: true,
      reportDir: 'build/reports/allure-report/allureReport',
      reportFiles: 'index.html',
      reportName: 'Allure Functional Test Report'
    ]
  }

  afterAlways('functionalTest:aat') {
    builder.gradle('allureReport')

    publishHTML target: [
      allowMissing: true,
      alwaysLinkToLastBuild: true,
      keepAll: true,
      reportDir: 'build/reports/allure-report/allureReport',
      reportFiles: 'index.html',
      reportName: 'Allure Functional Test Report'
    ]
  }

  syncBranchesWithMaster(['demo', 'perftest', 'ithc'])
}
