#!groovy
@Library("Infrastructure")

import uk.gov.hmcts.contino.GradleBuilder

def type = "java"
def product = "fact"
def component = "data-api"

GradleBuilder builder = new GradleBuilder(this, product)

def secrets = [
  'fact-kv-${env}': [
    secret('api-app-reg-id', 'APP_REG_ID'),
    secret('func-test-tenant-id', 'AZURE_TENANT_ID'),
    secret('func-test-client-app-id', 'CLIENT_APP_REG_ID'),
    secret('bstrap-func-test-client-secret', 'AZURE_CLIENT_SECRET')
  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [ $class: 'AzureKeyVaultSecret',
    secretType: 'Secret',
    name: secretName,
    version: '',
    envVariable: envVar
  ]
}

withPipeline(type, product, component) {
  env.FACT_MIGRATION_SOURCE_BASE_URL = 'http://fact-api-aat.service.core-compute-aat.internal'

  enableDbMigration('fact-kv')

  loadVaultSecrets(secrets)

  afterSuccess('test') {
    builder.gradle('integration')
  }

  afterAlways('functionalTest:preview') {
    builder.gradle('allureReport')

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : 'build/reports/allure-report/allureReport',
      reportFiles          : 'index.html',
      reportName           : 'Allure Functional Test Report'
    ]
  }

  afterAlways('functionalTest:aat') {
    builder.gradle('allureReport')

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : 'build/reports/allure-report/allureReport',
      reportFiles          : 'index.html',
      reportName           : 'Allure Functional Test Report'
    ]
  }

  syncBranchesWithMaster(['demo', 'perftest', 'ithc'])
}
